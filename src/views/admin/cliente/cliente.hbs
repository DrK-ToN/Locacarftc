<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h2> Lista de Clientes: </h2>
            <hr />
            <a href="/rota_cliente/cliente/add">
                <button class="btn btn-success">Nova cliente</button></a>
            {{#each clientes}}
                <div class="card mt-4">
                    <div class="card-body">
                        <h4><b>ID: </b>{{id_cliente}}</h4>
                        <small><b>Nome: </b>{{nome}}</small><br />
                        {{! <-- Linha corrigida }}

                        {{! Você também pode adicionar outros campos se quiser }}
                        <small><b>CPF: </b>{{cpf}}</small><br />
                        <small><b>Email: </b>{{email}}</small><br />

                        <a
                            href="/rota_cliente/editar_cliente/{{id_cliente}}"
                            class="btn btn-primary mt-3"
                        >Editar</a>
                        <a
                            href="/rota_cliente/deletar_cliente/{{id_cliente}}"
                            class="btn btn-danger mt-3"
                        >Deletar</a>
                        <a
                            href="/rota_locacao/historico/{{id_cliente}}"
                            class="btn btn-info mt-3"
                        >Histórico</a>
                    </div>
                </div>

            {{/each}}
        </div>
    </div>
</main>