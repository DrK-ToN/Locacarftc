<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h3> Registrar Nova Locação </h3>
            <div class="card">
                <div class="card-body">
                    <form action="/rota_locacao/locacao/novo" method="POST">

                        <label for="fk_cliente">Cliente:</label>
                        <select
                            name="fk_cliente"
                            id="fk_cliente"
                            class="form-control"
                            required
                        >
                            <option value="">Selecione um cliente...</option>
                            {{#each clientes}}
                                <option value="{{id_cliente}}">{{nome}}</option>
                            {{/each}}
                        </select>
                        <br />

                        <label for="fk_veiculo">Veículo Disponível:</label>
                        <select
                            name="fk_veiculo"
                            id="fk_veiculo"
                            class="form-control"
                            required
                        >
                            <option value="">Selecione um veículo...</option>
                            {{#each veiculos}}
                                <option value="{{id_veiculo}}">{{marca}}
                                    {{modelo}}
                                    - Placa:
                                    {{placa}}</option>
                            {{else}}
                                <option value="">Nenhum veículo disponível</option>
                            {{/each}}
                        </select>
                        <br />

                        <label for="data_inicio">Data de Início:</label>
                        <input
                            type="date"
                            id="data_inicio"
                            name="data_inicio"
                            class="form-control"
                            required
                        />
                        <br />

                        <label for="data_fim">Data de Fim (devolução):</label>
                        <input
                            type="date"
                            id="data_fim"
                            name="data_fim"
                            class="form-control"
                        />
                        <small class="form-text text-muted">Deixe em branco se a
                            locação ainda estiver ativa.</small>
                        <br />
                        <br />

                        <label for="valor">Valor (R$):</label>
                        <input
                            type="number"
                            step="0.01"
                            id="valor"
                            name="valor"
                            placeholder="150.50"
                            class="form-control"
                            required
                        />
                        <br />

                        <button type="submit" class="btn btn-success">Registrar
                            Locação</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>